#!/usr/bin/env bash
# This script transfers a file from the client to a server using scp.

# Check for the required number of arguments
if [ $# -lt 4 ]; then
  echo "Usage: $0 PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
  exit 1
fi

# Extract the arguments
file_path="$1"
server_ip="$2"
username="$3"
ssh_key="$4"

# Transfer the file using scp with strict host key checking disabled
if [[ -z "$ssh_key" ]]; then
  # No SSH key provided, use default behavior
  scp -o StrictHostKeyChecking=no "$file_path" "$username@$server_ip:~/""
else
  # Use SSH key for authentication
  scp -i "$ssh_key" -o StrictHostKeyChecking=no "$file_path" "$username@$server_ip:~/""
fi

# Check the exit code of scp command
if [ $? -eq 0 ]; then
  echo "File transferred successfully!"
else
  echo "Error: File transfer failed!"
fi
